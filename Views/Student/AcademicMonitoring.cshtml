@* New script *@
<script>
    $(document).ready(function () {

        // 🔹 Tab switching logic
        $(".tab").click(function () {
            $(".tab").removeClass("active");
            $(".tab-content").removeClass("active");
            $(this).addClass("active");
            $($(this).data("target")).addClass("active");
        });

        // 🔹 Add new subject row
        $("#addSubject").click(function () {
            var newRow = $(".subject-row:first").clone();

            // Clear input and select values
            newRow.find("input[type='text'], input[type='file']").val("");
            newRow.find("select").val("");

            // Remove any existing delete button before adding a new one
            newRow.find(".remove-subject").closest(".col-2").remove();

            // Add delete button for the new row
            newRow.append(
                $('<div class="col-2 d-flex align-items-end" style="margin-top: 20px;">')
                    .append('<button type="button" class="btn btn-outline-danger btn-sm remove-subject">Delete</button>')
            );

            $("#subjectsWrapper").append(newRow);
            updateSubjectNumbers(); // Renumber and re-index names
        });

        // 🔹 Renumber subject rows and update input names
        function updateSubjectNumbers() {
            $(".subject-row").each(function (index) {
                const number = index + 1;
                $(this).find(".subject-number").text(number);

                // Update names with proper indices for ASP.NET Core model binding
                $(this).find("input[name^='Number']").attr("name", `Number[${index}]`).val(number);
                $(this).find("input[name^='Subject']").attr("name", `Subject[${index}]`);
                $(this).find("select[name^='Grade']").attr("name", `Grade[${index}]`);
            });
        }

        // 🔹 Remove subject row
        $(document).on("click", ".remove-subject", function () {
            $(this).closest(".subject-row").remove();
            updateSubjectNumbers(); // Renumber after removing
        });

        // 🔹 Update label with uploaded file name
        $(document).on("change", "input[type='file']", function () {
            var fileName = $(this).val().split("\\").pop();
            var label = $(this).siblings("label");
            label.text(fileName || "Upload Proof of Grades");
        });

        // 🔹 Validate form before submission
        $("#gradeForm").on("submit", function (e) {
            let isValid = true;
            let hasFile = $("input[name='GradeFile']").get(0)?.files.length > 0;

            // Reset previous validation states
            $(".grade-input, input[name^='Subject']").removeClass("is-invalid");
            $("input[name='GradeFile']").removeClass("is-invalid");

            // Validate each subject row
            $(".subject-row").each(function (index) {
                const subjectName = $(this).find("input[name^='Subject']").val().trim();
                const grade = $(this).find("select[name^='Grade']").val().trim();

                const isRowFilled = subjectName || grade;

                // 🚫 If row is completely empty, block submission
                if (!subjectName && !grade) {
                    $(this).find("input[name^='Subject']").addClass("is-invalid");
                    $(this).find("select[name^='Grade']").addClass("is-invalid");
                    isValid = false;
                    console.log(`Row ${index + 1} is completely empty.`);
                }

                // 🚫 If row is partially filled, also block submission
                if (isRowFilled && (!subjectName || !grade)) {
                    if (!subjectName) $(this).find("input[name^='Subject']").addClass("is-invalid");
                    if (!grade) $(this).find("select[name^='Grade']").addClass("is-invalid");
                    isValid = false;
                    console.log(`Row ${index + 1} is partially filled.`);
                }
            });

            // Validate file upload
            if (!hasFile) {
                $("input[name='GradeFile']").addClass("is-invalid");
                isValid = false;
                console.log("No file uploaded.");
            }

            // Prevent submission if invalid
            if (!isValid) {
                e.preventDefault();
                alert("Please delete unused rows or complete all required fields and upload your proof of grades.");
                $(".is-invalid:first")[0]?.scrollIntoView({ behavior: "smooth" });
            }
        });

        // 🔹 Run once on page load to ensure correct initial indexing
        updateSubjectNumbers();
    });
</script>