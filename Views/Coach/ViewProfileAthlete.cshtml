@{
    ViewData["Title"] = "Coach ViewProfileAthlete";
}
@model FITNSS.Models.StudentProfileModel

@{
    var studentsApproved = ViewBag.StudentAthleteProfileAndRecords.StudentListApproved as List<FITNSS.Models.StudentAthleteProfileModel>;
}

<div class="d-flex">

    @Html.Partial("Sidebar")
    <div class="main-content-student">
        <div class="container-fluid p-5">
            <div class="mb-3">
                <h2 class="m-0">Athletes</h2>
            </div>


            @if (studentsApproved != null) {
                @foreach (var student in studentsApproved){

                    <div class="">
                        <div class="card border-0" style="border-radius: 20px;">

                            <div class="card-body m-0 d-flex align-items-center">
                                <div class="px-3">
                                    <img id="profileImage"
                                         class="rounded-circle border border-2 border-dark"
                                         src="@(string.IsNullOrEmpty(@student.ProfileImagePath)
            ? Url.Content("~/images/profile.png")
            : Url.Content(@student.ProfileImagePath))"
                                         alt="User Image"
                                         style="width:150px; height:150px;">
                                </div>
                                <div>
                                    <p class="m-0 fs-4 fw-bold">@student.FullName</p>
                                    <p class="m-0 text-muted">EMAIL: @student.Email</p>

                                </div>
                            </div>
                            <div class="card-body m-3">

                                <div class="card-body">
                                    <h2 class="mx-3">I. PERSONAL INFORMATION</h2>
                                    <div class="row my-12" style="row-gap: 1rem;">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Last Name *</label>
                                                <input type="text" class="form-control" value="@student.FullName" readonly>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Event * (Please Specify your specialization)</label>
                                                <input type="text" name="Event" class="form-control" value="@student.Event" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>Date of Birth *</label>
                                                <input type="date" class="form-control" value="@student.DateOfBirth" readonly>
                                            </div>
                                        </div>

                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>Age</label>
                                                <input type="text" class="form-control" value="@student.Age" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>Height (cm) *</label>
                                                <input type="text" class="form-control" value="@student.Height" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>Weight (kg) *</label>
                                                <input type="text" class="form-control" value="@student.Weight" readonly>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Email Address</label>
                                                <input type="email" class="form-control" value="@student.Email" readonly>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Contact Number *</label>
                                                <input type="text" name="GTwelveGwa" class="form-control" value="@student.ContactNumber" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Home Address *</label>
                                                <input type="text" name="HomeAddress" class="form-control" value="@student.HomeAddress" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Provincial Address </label>
                                                <input type="text" name="ProvincialAddress" class="form-control" value="@student.ProvincialAddress" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Vaccination </label>
                                                <input type="text" name="Vaccination" class="form-control" value="@student.Vaccination" readonly>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Philhealth Card Number</label>
                                                <input type="text" name="PhilhealthNumber" class="form-control" value="@student.PhilhealthNumber" readonly>
                                            </div>
                                        </div>


                                    </div>
                                </div>

                                <div class="card-body">
                                    <h2 class="mx-3">II. Educational Background</h2>
                                    <div class="row my-4">
                                        <div class="col-8">
                                            <div class="form-group">
                                                <label>Elementary Education</label>
                                                <label>Elementary  School*</label>
                                                <input type="text" name="ElementarySchool" class="form-control" value="@student.ElementarySchool" readonly>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Year Graduated *</label>
                                                <input type="text" name="ElementaryYearGraduated" class="form-control" value="@student.ElementaryYearGraduated" readonly>
                                            </div>
                                        </div>

                                        <div class="col-8">
                                            <div class="form-group">
                                                <label>Secondary Education</label>
                                                <label>Secondary  School*</label>
                                                <input type="text" name="SecondarySchool" class="form-control" value="@student.SecondarySchool" readonly>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Year Graduated *</label>
                                                <input type="text" name="SecondaryYearGraduated" class="form-control" value="@student.SecondaryYearGraduated" readonly>
                                            </div>
                                        </div>

                                        <div class="col-8">
                                            <div class="form-group">
                                                <label>Senior High School</label>
                                                <label>Senior High  School*</label>
                                                <input type="text" class="form-control" value="@student.SeniorHighSchool" readonly>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Year Graduated *</label>
                                                <input type="text" class="form-control" value="@student.SeniorHighYearGraduated" readonly>
                                            </div>
                                        </div>

                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>SHS Track/Strand *</label>
                                                <input type="text" class="form-control" value="@student.ShsTrackOrStrand" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>G-10 GWA</label>
                                                <input type="text" class="form-control" value="@student.GTenGwa" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>G-11 GWA</label>
                                                <input type="text" class="form-control" value="@student.GElevenGwa" readonly>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label>G-12  GWA</label>
                                                <input type="text" class="form-control" value="@student.GTwelveGwa" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Transfer Status</label>
                                                <input type="checkbox" name="TransferStatus"> I am a transferee
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>Previous Program/Course</label>
                                                <input type="text" class="form-control" value="@student.PrevProgramOrCourse" placeholder="Please pecify your previous program/course" readonly>
                                            </div>
                                        </div>

                                    </div>
                                </div>





                                <div class="card-body">
                                    <h2 class="mx-3">Sports Participation</h2>

                                    <div id="tournamentWrapper">
                                        @foreach (var participation in student.Participations)
                                        {

                                            <div class="row my-4 tournament-row">
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label>Name of Tournament</label>
                                                        <input type="text" class="form-control" value="@participation.Name" readonly />
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label>Level</label>
                                                        <input class="form-control" value="@participation.Level" readonly />
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label>Year</label>
                                                        <input type="text" class="form-control" value="@participation.Year" readonly />
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="form-group">
                                                        <label>Award</label>
                                                        <input type="text" class="form-control" value="@participation.Award" readonly />
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    
                                </div>

                                <div class="card-body">
                                    <h2 class="mx-3">IV. Preferred Progam/Course</h2>
                                    <div class="row my-4">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>1st Choice *</label>
                                                <input class="form-control" value="@student.CourseOne" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>2nd Choice *</label>
                                                <input class="form-control" value="@student.CourseTwo" readonly>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label>3rd Choice *</label>
                                                <input class="form-control" value="@student.CourseThree" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                                <div class="card-body mb-3" style="background: #E0FFCF;border: 1px solid #8DFA5A;color: #1F8209;">
                                    <p class="fs-5 fw-bold m-0">
                                        <svg width="25px" height="25px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#1F8209"><path d="M4 12C4 7.58172 7.58172 4 12 4C16.4183 4 20 7.58172 20 12C20 16.4183 16.4183 20 12 20C7.58172 20 4 16.4183 4 12ZM12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2ZM17.4571 9.45711L16.0429 8.04289L11 13.0858L8.20711 10.2929L6.79289 11.7071L11 15.9142L17.4571 9.45711Z"></path></svg>
                                        This form has been submitted and approved.
                                    </p>

                                    <div class="row my-4">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label><strong>Submission Date:</strong> 8/9/2024</label>
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Approved by:</strong> SDPO Office</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <div class="card-body" style="background: #EFF3FF;border: 1px solid #1D4EF2;color: #1D4EF2;">
                                    <p class="fs-5 fw-bold m-0">
                                        Current Status: Active
                                    </p>

                                    <div class="row my-4">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label><strong>Current Program:</strong> Bachelor of Science in Computer Science</label>
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Year Level:</strong> Junior</label>
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Current GWA:</strong> 1.75</label>
                                            </div>

                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label><strong>Eligibility Status:</strong> ELIGIBLE</label>
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Competition Status:</strong> ACTIVE</label>
                                            </div>
                                            <div class="form-group">
                                                <label><strong>Last Updated:</strong> 2025-11-15</label>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="card-body  text-center mb-3">

                                    <a href="@student.Portfolio" target="_blank" class="btn btn-lg text-white" style="background: #520505;">Download PDF</a>
                                    <button class="btn btn-lg text-white" style="background: #BC0000;">
                                        Participation
                                        Portfolio
                                    </button>
                                    <button class="btn btn-lg text-white" style="background: #BC0000;">
                                        Wellness
                                        History
                                    </button>
                                    <button class="btn btn-lg text-white" style="background: #F30707;">
                                        Academic
                                        History
                                    </button>
                                    <a href="@Url.Action("athleteinformation", "Coach")" class="btn btn-lg" style="background: #C4C4C4;">Close</a>
                                </div>




                            </div>
                    </div>
                </div>

                }
            }


            

        </div>
    </div>
    @Html.Partial("CoachRightSidebar")
</div>

